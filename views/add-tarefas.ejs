<!DOCTYPE html>
<html lang="pt-br">

<%- include('./partes/head.ejs') %>

<body>
    <div class="container-add-tarefas">
        <a href="/tarefas">
            <ion-icon class="voltar" name="arrow-back-circle"></ion-icon>
        </a>
        <h1>Add tarefa</h1>
        <form action="http://localhost:3001/tarefas/add" method="POST">
            <label for="nome">Nome</label>
            <input id="nome" name="nome" type="text" required>

            <label for="descricao">Descricao</label>
            <textarea id="descricao" name="descricao" cols="30" rows="10" ></textarea>

            <label for="nivel-dificuldade">Nivel de Dificuldade</label>
            <input id="nivel-dificuldade" name="nivelDificuldade" type="number" min="1" max="3" required>
            <label for="nivel-prioridade">Nivel de Prioridade</label>
            <input id="nivel-prioridade" name="nivelPrioridade" type="number" min="1" max="3" required>
            <input type="submit" value="Add Tarefa">
        </form>
    </div>

    <!-- ION ICONS -->
    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
</body>
</html>